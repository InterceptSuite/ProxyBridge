<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProxyBridge.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="550"
        x:Class="ProxyBridge.GUI.Views.ProxyRulesWindow"
        x:DataType="vm:ProxyRulesViewModel"
        x:CompileBindings="True"
        Title="Process Rules"
        Icon="/Assets/logo.ico"
        Width="700" Height="550"
        MinWidth="600" MinHeight="400"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style Selector="TextBlock.secondary">
            <Setter Property="Foreground" Value="#FF999999"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="Consolas,monospace"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="68"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF094771"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF2A2D2E"/>
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#FF1177BB"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#FF3E3E42"/>
        </Style>

        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#FF4E4E52"/>
        </Style>
    </Window.Styles>

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FF1E1E1E" Padding="20,16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="⚙" FontSize="22" VerticalAlignment="Center"/>
                    <TextBlock Text="Process Rules"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#FFE0E0E0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="➕ Add Rule"
                        Command="{Binding AddRuleCommand}"/>
            </Grid>
        </Border>

        <!-- Rules List View -->
        <Grid IsVisible="{Binding !IsAddRuleViewOpen}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Table Header -->
            <Border Grid.Row="0"
                    Background="#FF1E1E1E"
                    BorderBrush="#FF3F3F46"
                    BorderThickness="0,1,0,1"
                    Padding="20,12">
                <Grid ColumnDefinitions="100,80,*,200">
                    <TextBlock Grid.Column="0"
                               Text="Enabled"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFB0B0B0"
                               Margin="0,0,20,0"/>
                    <TextBlock Grid.Column="1"
                               Text="SR"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFB0B0B0"
                               Margin="0,0,20,0"/>
                    <TextBlock Grid.Column="2"
                               Text="Process Name"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFB0B0B0"
                               Margin="0,0,20,0"/>
                    <TextBlock Grid.Column="3"
                               Text="Action"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFB0B0B0"/>
                </Grid>
            </Border>

            <!-- Table Body -->
            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProxyRules}" x:Name="RulesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF252526"
                                    BorderBrush="#FF3F3F46"
                                    BorderThickness="0,0,0,1"
                                    Padding="20,16">
                                <Grid ColumnDefinitions="100,80,*,200">
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsEnabled}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Index}"
                                               FontSize="14"
                                               Foreground="#FF999999"
                                               VerticalAlignment="Center"
                                               Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding ProcessName}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="#FFE0E0E0"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Action}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#FF4EC9B0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Add Rule Form View -->
        <StackPanel Margin="24,20"
                    Spacing="20"
                    IsVisible="{Binding IsAddRuleViewOpen}">
            <StackPanel Spacing="6">
                <TextBlock Text="Process Name" Classes="label"/>
                <TextBox Text="{Binding NewProcessName}"
                         Watermark="e.g., chrome.exe, firefox.exe"/>
                <TextBlock Text="{Binding ProcessNameError}"
                           IsVisible="{Binding ProcessNameError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           Foreground="#FFFF6B6B"
                           FontSize="12"
                           Margin="0,4,0,0"/>
                <TextBlock Text="Enter the application name you want to control (e.g., chrome, firefox.exe, notepad). You can use * to apply the rule to all system traffic."
                           FontSize="11"
                           Foreground="#FF999999"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Spacing="6">
                <TextBlock Text="Action" Classes="label"/>
                <ComboBox SelectedIndex="0"
                          HorizontalAlignment="Stretch"
                          x:Name="ActionComboBox"
                          SelectionChanged="ActionComboBox_SelectionChanged">
                    <ComboBoxItem Content="PROXY" Tag="PROXY"/>
                    <ComboBoxItem Content="DIRECT" Tag="DIRECT"/>
                    <ComboBoxItem Content="BLOCK" Tag="BLOCK"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12"
                        Margin="0,16,0,0">
                <Button Content="Cancel"
                        Classes="secondary"
                        Command="{Binding CancelAddRuleCommand}"
                        Width="100"/>
                <Button Content="Save Rule"
                        Command="{Binding SaveNewRuleCommand}"
                        Width="130"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
